@model List<ResultBannerDto>

@{
	ViewData["Title"] = "Banner Listesi";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-hover table-bordered">
	@{
		int count = 0;
	}
	<tr>
		<th>#</th>
		<th>Şehir</th>
		<th>Başlık</th>
		<th>İşlemler</th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<td>@count</td>
			<td>@item.City</td>
			<td>@item.Title</td>
			<td>
				<button onclick="deleteBanner(this)" id="@item.Id" class="btn btn-danger">Sil</button>
				<a asp-controller="Banner" asp-action="UpdateBanner" asp-route-id="@item.Id" class="btn btn-success">Güncelle</a>
			</td>
		</tr>
	}
</table>

<a asp-controller="Banner" asp-action="CreateBanner" class="btn btn-primary">Yeni Banner Ekle</a>

<script>
	function deleteBanner(button) {
		var id = button.getAttribute("id");
		Swal.fire({
			title: "Silmek istediğinize emin misiniz?",
			text: "Bu işlemi geri alamazsınız!",
			icon: "warning",
			showCancelButton: true,
			confirmButtonColor: "#3085d6",
			cancelButtonColor: "#d33",
			confirmButtonText: "Evet, sil!",
			cancelButtonText: "İptal"
		}).then((result) => {
			if (result.isConfirmed) {
				window.location.href = "/Banner/DeleteBanner/" + id
			}
		});
	};
</script>