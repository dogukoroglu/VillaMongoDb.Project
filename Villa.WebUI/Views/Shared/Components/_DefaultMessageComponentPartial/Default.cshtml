<div class="col-lg-5">
	<form asp-controller="SendMessage" asp-action="SendMessage" id="contact-form" method="post">
		<div class="row">
			<div class="col-lg-12">
				<fieldset>
					<label for="name">Ad-Soyad</label>
					<input type="text" name="Name" id="name" placeholder="Ad-Soyadınız..." required>
				</fieldset>
			</div>
			<div class="col-lg-12">
				<fieldset>
					<label for="email">Email</label>
					<input type="text" name="Email" id="email" placeholder="Email adresiniz..." required="">
				</fieldset>
			</div>
			<div class="col-lg-12">
				<fieldset>
					<label for="subject">Konu</label>
					<input type="text" name="Subject" id="subject" placeholder="Konuyu giriniz...">
				</fieldset>
			</div>
			<div class="col-lg-12">
				<fieldset>
					<label for="message">Mesajınız</label>
					<textarea name="MessageContent" id="message" placeholder="Mesajınızı giriniz"></textarea>
				</fieldset>
			</div>
			<div class="col-lg-12">
				<fieldset>
					<button type="submit" id="form-submit" class="orange-button">Gönder</button>
				</fieldset>
			</div>
		</div>
	</form>
</div>