@{
	Layout = null;
}

<!DOCTYPE html>

<html lang="en">

@await Component.InvokeAsync("_AdminHeadComponentPartial")

<body>

	@await Component.InvokeAsync("_AdminPreloaderComponentPartial")

	<div id="main-wrapper">

		@await Component.InvokeAsync("_AdminLogoComponentPartial")

		@await Component.InvokeAsync("_AdminNavbarComponentPartial")

		@await Component.InvokeAsync("_AdminSidebarComponentPartial")

		<div class="content-body">
			<div class="container-fluid">
				<div class="row page-titles mx-0">
					<div class="col-sm-6 p-md-0">
						<div class="welcome-text">
							<h4>@ViewData["Title"]</h4>
						</div>
					</div>
					<div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
						<ol class="breadcrumb">
							<li class="breadcrumb-item"><a href="javascript:void(0)">Layout</a></li>
							<li class="breadcrumb-item active"><a href="javascript:void(0)">Blank</a></li>
						</ol>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12">
						<div class="card">

							<div class="card-body">
								@RenderBody()
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>

		@await Component.InvokeAsync("_AdminFooterComponentPartial")

	</div>

	@await Component.InvokeAsync("_AdminScriptComponentPartial")

</body>

</html>